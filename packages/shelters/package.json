{
  "name": "@protectorescat/shelters",
  "version": "0.0.0",
  "description": "Node.js development in TypeScript that scrappes animal shelter websites",
  "type": "module",
  "engines": {
    "node": ">= 22.0"
  },
  "private": true,
  "scripts": {
    "start": "node build/src/main.js",
    "prestart": "npm run remove:organizations && npm run remove:organizationsByRegion",
    "poststart": "npm run move:web",
    "remove:web-organization-logos": "rm -rf ../../apps/web/public/organizationLogos/*",
    "copy:web-organization-logos": "cp -rf ./organizationLogos/*.webp ../../apps/web/public/organizationLogos/",
    "remove:web-organizations": "rm -rf ../../apps/web/content/organizations/*",
    "move:web-organizations": "find ./organizations -type f -name '*.json' -exec mv {} ../../apps/web/content/organizations/ \\;",
    "remove:web-organizationsByRegion": "rm -rf ../../apps/web/content/organizationsByRegion/*",
    "move:web-organizationsByRegion": "find ./organizationsByRegion -type f -name '*.json' -exec mv {} ../../apps/web/content/organizationsByRegion/ \\;",
    "move:web": "npm run remove:web-organizations && npm run move:web-organizations && npm run remove:web-organizationsByRegion && npm run move:web-organizationsByRegion && npm run remove:web-organization-logos && npm run copy:web-organization-logos",
    "remove:organizations": "rm -rf ./organizations/*.json",
    "remove:organizationsByRegion": "rm -rf ./organizationsByRegion/*.json",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "lint": "eslint .",
    "test:unit-run": "vitest run unit",
    "test:coverage": "vitest run unit --coverage.enabled --coverage.all",
    "prettier": "prettier \"{src,__{tests}__}/**/*.{ts,mts}\" --config .prettierrc --write",
    "prettier:check": "prettier \"{src,__{tests}__}/**/*.{ts,mts}\" --config .prettierrc --check",
    "test:unit-watch": "vitest unit --watch"
  },
  "author": "Marc Mortensen",
  "license": "Apache-2.0",
  "devDependencies": {
    "@eslint/js": "9.38.0",
    "eslint-config-prettier": "10.1.8",
    "rimraf": "6.0",
    "ts-api-utils": "2.1.0",
    "typescript": "5.9.3",
    "vitest": "4.0.3"
  },
  "dependencies": {
    "tslib": "2.8.1"
  },
  "main": "index.js",
  "keywords": []
}
