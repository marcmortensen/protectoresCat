{
  "name": "protectores-cat",
  "version": "1.0.0",
  "description": "Recopilation of active animal shelter in Catalonia",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "test-unit-watch:all": "turbo run test:unit-watch",
    "test-unit-watch:shelters": "turbo run test:unit-watch --filter=@protectorescat/shelters",
    "test-unit-run:all": "turbo run test:unit-run",
    "test-unit-run:shelters": "turbo run test:unit-run --filter=@protectorescat/shelters",
    "tsc:shelters": "turbo run tsc --filter=@protectorescat/shelters",
    "tsc:web": "turbo run tsc --filter=@protectorescat/web",
    "tsc:all": "turbo run tsc"
  },
  "private": true,
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/node20": "20.1.4",
    "@typescript-eslint/eslint-plugin": "8.22.0",
    "@typescript-eslint/parser": "8.22.0",
    "@typescript-eslint/utils": "8.22.0",
    "@vitest/eslint-plugin": "1.1.25",
    "@vue/eslint-config-prettier": "10.2.0",
    "@vue/eslint-config-typescript": "14.3.0",
    "@vue/tsconfig": "0.7.0",
    "globals": "15.14.0",
    "only-allow": "1.2.1",
    "prettier": "3.4.2",
    "turbo": "2.4.0",
    "typescript": "5.7.3",
    "typescript-eslint": "8.22.0"
  },
  "packageManager": "pnpm@9.12.3",
  "engines": {
    "node": "20.x"
  }
}
